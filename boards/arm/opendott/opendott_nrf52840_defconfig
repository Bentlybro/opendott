# OpenDOTT Board Configuration
# Note: SOC/board selection is automatic via board.yml in Zephyr 3.7.0 HWMv2

# Enable MPU
CONFIG_ARM_MPU=y

# Enable hardware stack protection
CONFIG_HW_STACK_PROTECTION=y

# Clock configuration
CONFIG_CLOCK_CONTROL_NRF=y
CONFIG_CLOCK_CONTROL_NRF_K32SRC_RC=y

# Enable GPIO
CONFIG_GPIO=y

# Console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Pinctrl
CONFIG_PINCTRL=y
